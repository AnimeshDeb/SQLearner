{
  "compilerOptions": {
    /* Project Reference Settings (Added/Changed) */
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    
    /* IMPORTANT: "allowImportingTsExtensions" must be REMOVED or set to false.
       It requires "noEmit": true, which contradicts the requirement for project references.
    */
    "allowImportingTsExtensions": false, 
    
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}